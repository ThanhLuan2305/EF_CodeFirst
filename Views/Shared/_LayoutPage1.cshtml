<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <meta charset="utf-8" />
    <link href="~/Content/bootstrap.css" rel="stylesheet">
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.7.1.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-info navbar-dark m">
        <a class="navbar-brand" href="">
            Company
        </a>
        <div class="col-8">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/home/index">Trang chủ</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="/products/index">Product</a>
                </li>
                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-item">
                        <a class="nav-link" href="/acount/profile">Profile</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/acount/logout">Logout</a>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link" href="/acount/register">Register</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/acount/login">Login</a>
                    </li>
                }
            </ul>
        </div>
        @if(User.Identity.IsAuthenticated)
            {
                <div style="color:red; font-weight: bold">
                    Hello @User.Identity.Name
                </div>
            }
    </nav>
    <div class="container-fluid">
        @RenderBody()
    </div>
</body>
</html>
